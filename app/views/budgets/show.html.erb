<%- model_class = Budget -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:total_value) %>:</strong></dt>
  <dd><%= @budget.total_value %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_to_conclude) %>:</strong></dt>
  <dd><%= @budget.time_to_conclude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:competence_center_id) %>:</strong></dt>
  <dd><%= @budget.competence_center_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              budgets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_budget_path(@budget), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              budget_path(@budget),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
